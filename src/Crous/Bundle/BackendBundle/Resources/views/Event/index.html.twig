{% extends 'CrousBackendBundle::layout.html.twig' %} 

{% block body %}
<div class="row" style="padding: 5px;">
    {% include 'CrousBackendBundle:Block:messages.html.twig' %}
    
    <h3>{{'Event Management'|trans}}</h3>
    <div class="btn-toolbar pull-right" style="margin-bottom: 9px">
        <a class="btn btn-default" href="{{path('crous_backend_event_add')}}" role="button">{{'Add New'|trans}}</a>     
    </div>
    <div class="form-body">
        <form class="form-inline" method="get" action="" novalidate="novalidate">
            {{form_widget(filterForm)}}
            <button type="submit" class="btn btn-default">{{'Search'|trans}}</button>
        </form>   
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th width="1%">{{'#'|trans}}</th>
                <th>{{'Title'|trans}}</th>
                <th>{{'Category'|trans}}</th>
                <th width="20%">{{'Action'|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for event in entities%}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{event.title}}</td>
                <td>{{event.categories}}</td>
                <td>
                    <a href="{{path('crous_backend_event_add', {id: event.id})}}">{{'Edit'|trans}}</a> |
                    <a onclick="return confirm('{{'Do you want to delete this record?'|trans}}');" href="{{path('crous_backend_event_delete', {id: event.id, token: token})}}">{{'Delete'|trans}}</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{pagination|raw}}
</div>
{% endblock %}

