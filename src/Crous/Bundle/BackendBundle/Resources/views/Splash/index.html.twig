{% extends 'CrousBackendBundle::layout.html.twig' %} 

{% block body %}
    <div class="inner full">
        <div class="row">
            <div class="row" style="padding: 5px;">
                {% include 'CrousBackendBundle:Block:messages.html.twig' %}

                <h3>{{'Splash Management'|trans}}</h3>
                <div class="btn-toolbar pull-right" style="margin-bottom: 9px">
                    <a class="btn btn-default" href="{{path('crous_backend_splash_add')}}" role="button">{{'Add New'|trans}}</a>     
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th width="1%">{{'#'|trans}}</th>
                            <th>{{'Region'|trans}}</th>
                            <th>{{'Content'|trans}}</th>
                            <th width="20%">{{'Action'|trans}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for splash in entities%}
                            <tr>
                                <td>{{loop.index}}</td>
                                <td>{{splash.region.name}}</td>
                                <td>{{splash.content}}</td>
                                <td>
                                    <a href="{{path('crous_backend_splash_add', {id: splash.id})}}">{{'Edit'|trans}}</a> |
                                    <a onclick="return confirm('{{'Do you want to delete this record?'|trans}}');" href="{{path('crous_backend_splash_delete', {id: splash.id, token: token})}}">{{'Delete'|trans}}</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {{pagination|raw}}
            </div>
        </div>
    </div>
{% endblock %}

