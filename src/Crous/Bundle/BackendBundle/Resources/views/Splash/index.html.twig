{% extends 'CrousBackendBundle::layout.html.twig' %} 

{% block body %}
    <div class="inner">
        <div class="row">
            <div class="col-xs-12">
                {% include 'CrousBackendBundle:Block:messages.html.twig' %}
                <div class="wrap-btn text-right">
                    <a id="ajouter" href="{{path('crous_backend_splash_add')}}" name="ajouter" class="btn btn-default">{{'Add New'|trans}}</a>
                    <a href="{{path('crous_backend_splash_export')}}" id="supPrimer" name="supPrimer" class="btn btn-default">{{'Export'|trans}}</a>
                </div>
                <div class="table-responsive custom-table style-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th width="1%">{{'#'|trans}}</th>
                                <th>{{'Region'|trans}}</th>
                                <th>{{'Content'|trans}}</th>
                                <th width="10%"></th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for splash in entities%}
                                <tr class="{% if loop.index % 2 == 1%}odd{%else%}even{%endif%}">
                                    <td>{{loop.index}}</td>
                                    <td>{{splash.region.name}}</td>
                                    <td>{{splash.content}}</td>
                                    <td class="wrap-link style-1">
                                        <a class="link link-edit" href="{{path('crous_backend_splash_add', {id: splash.id})}}">{{'Edit'|trans}}</a>
                                    </td>
                                    <td class="wrap-link style-1">
                                        <a class="link link-edit" onclick="return confirm('{{'Do you want to delete this record?'|trans}}');" href="{{path('crous_backend_splash_delete', {id: splash.id, token: token})}}">{{'Delete'|trans}}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {{pagination|raw}}
            </div>
        </div>     
    </div>
{% endblock %}

