{% extends 'CrousBackendBundle::layout.html.twig' %} 

{% block body %}
    <div class="inner full">
        <div class="row">
            <div class="row" style="padding: 5px;">
                {% include 'CrousBackendBundle:Block:messages.html.twig' %}

                <h3>{{'House Management'|trans}}</h3>
                <div class="btn-toolbar pull-right" style="margin-bottom: 9px">
                    <a class="btn btn-default" href="{{path('crous_backend_house_add')}}" role="button">{{'Add New'|trans}}</a>     
                </div>
                <div class="form-body">
                    <form class="form-inline" method="get" action="" novalidate="novalidate">
                        {{form_widget(filterForm)}}
                        <button type="submit" class="btn btn-default">{{'Search'|trans}}</button>
                    </form>   
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th width="1%">{{'#'|trans}}</th>
                            <th>{{'Title'|trans}}</th>
                            <th>{{'Region'|trans}}</th>
                            <th width="20%">{{'Action'|trans}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for house in entities%}
                            <tr>
                                <td>{{loop.index}}</td>
                                <td>{{house.title}}</td>
                                <td>{{house.region.name}}</td>
                                <td>
                                    <a href="{{path('crous_backend_house_add', {id: house.id})}}">{{'Edit'|trans}}</a> |
                                    <a onclick="return confirm('{{'Do you want to delete this record?'|trans}}');" href="{{path('crous_backend_house_delete', {id: house.id, token: token})}}">{{'Delete'|trans}}</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {{pagination|raw}}
            </div>
        </div>
    </div>
{% endblock %}

