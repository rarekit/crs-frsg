{% extends 'CrousBackendBundle::layout.html.twig' %} 

{% block body %}
    {% form_theme form 'CrousBackendBundle:Form:fields.html.twig' %}
    <div class="row" style="padding: 5px;">
        {% include 'CrousBackendBundle:Block:messages.html.twig' %}
        
        <h3>{{'House Management'|trans}}</h3>
        <div class="form-body">
            <form class="form-horizontal" method="post" action="" enctype="multipart/form-data" novalidate="novalidate">
                {{form_widget(form)}}
                <button type="submit" class="btn btn-default">{{'Save'|trans}}</button>
                <a type="submit" href="{{path('crous_backend_house_list')}}" class="btn btn-default">{{'Back'|trans}}</a>
            </form>   
        </div>
    </div>
{% endblock %}

