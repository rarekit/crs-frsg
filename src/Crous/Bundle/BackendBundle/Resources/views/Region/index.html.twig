{% extends 'CrousBackendBundle::layout.html.twig' %} 

{% block body %}
<div class="row" style="padding: 5px;">
    {% include 'CrousBackendBundle:Block:messages.html.twig' %}
    
    <h3>{{'Region Management'|trans}}</h3>
    <div class="btn-toolbar pull-right" style="margin-bottom: 9px">
        <a class="btn btn-default" href="{{path('crous_backend_region_add')}}" role="button">{{'Add New'|trans}}</a>     
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>{{'Region Name'|trans}}</th>
                <th>{{'Code'|trans}}</th>
                <th width="20%">{{'Action'|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for region in entities%}
            <tr>
                <td>{{region.name}}</td>
                <td>{{region.code}}</td>
                <td>
                    <a href="{{path('crous_backend_region_add', {id: region.id})}}">{{'Edit'|trans}}</a> |
                    <a onclick="return confirm('{{'Do you want to delete this record?'|trans}}');" href="{{path('crous_backend_region_delete', {id: region.id, token: token})}}">{{'Delete'|trans}}</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{pagination|raw}}
</div>
{% endblock %}

