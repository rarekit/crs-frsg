{% extends 'CrousBackendBundle::layout.html.twig' %} 
{% block meta%}
    <title>{{'Region Management'|trans}}</title>
    <meta name="description" content="{{'Region Management'|trans}}">
    <meta name="keywords" content="{{'Region Management'|trans}}">
{% endblock %}
{%block homecls%}class="blue-theme"{%endblock%}
{% block body %}
    <div class="inner">
        <div class="row">
            <div class="col-xs-12">
                 {% include 'CrousBackendBundle:Block:messages.html.twig' %}
                <div class="wrap-btn text-right">
                    <a id="ajouter" href="{{path('crous_backend_region_add')}}" name="ajouter" class="btn btn-default">{{'Add New'|trans}}</a>
                </div>
                <div class="table-responsive custom-table style-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th width="1%">{{'#'|trans}}</th>
                                <th>{{'Region Name'|trans}}</th>
                                <th>{{'Code'|trans}}</th>
                                <th width="10%"></th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for region in entities%}
                                <tr class="{% if loop.index % 2 == 1%}odd{%else%}even{%endif%}">
                                    <td>{{loop.index}}</td>
                                    <td>{{region.name}}</td>
                                    <td>{{region.code}}</td>
                                    <td class="wrap-link style-1">
                                        <a class="link link-edit" href="{{path('crous_backend_region_add', {id: region.id})}}">{{'Edit'|trans}}</a>
                                    </td>
                                    <td class="wrap-link style-1">
                                        <a class="link link-edit" onclick="return confirm('{{'Do you want to delete this record?'|trans}}');" href="{{path('crous_backend_region_delete', {id: region.id, token: token})}}">{{'Delete'|trans}}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {{pagination|raw}}
            </div>
        </div>    
        
        
    </div>
{% endblock %}

