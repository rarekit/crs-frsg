{% extends 'CrousBackendBundle::layout.html.twig' %} 
{% block meta%}
    <title>{{'Assistance Management'|trans}}</title>
    <meta name="description" content="{{'Assistance Management'|trans}}">
    <meta name="keywords" content="{{'Assistance Management'|trans}}">
{% endblock %}
{%block homecls%}class="blue-theme"{%endblock %}
{% block body %}
    {% form_theme form 'CrousBackendBundle:Form:fields.html.twig' %}
    <div class="inner">
        <div class="row">
            <div class="col-xs-12">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#info" aria-controls="info" role="tab" data-toggle="tab">{{'Informations'|trans}}</a>
                    </li>
                    <li role="presentation">
                        <a href="#elements" aria-controls="elements" role="tab" data-toggle="tab">{{'Elements'|trans}}</a>
                    </li>
                </ul> 
                <div class="tab-content" style="padding-top: 5px;">
                    <div role="tabpanel" class="tab-pane active" id="info">
                        <form class="form-default formulaire-form" method="post" action="" enctype="multipart/form-data" novalidate="novalidate">
                            <div class="col-xs-12">
                                {% include 'CrousBackendBundle:Block:messages.html.twig' %}
                                <div class="form-body">
                                    {{form_widget(form)}}
                                </div>
                                <div class="col-xs-12 col-sm-9 col-sm-offset-3">
                                    <div class="wrap-btn style-3">
                                        <button type="submit" class="btn btn-default">{{'Save'|trans}}</button>
                                        <a type="submit" href="{{path('crous_backend_assistance_list')}}" class="btn btn-default">{{'Back'|trans}}</a>
                                    </div>
                                </div>
                            </div>
                        </form>   
                    </div>
                    <div role="tabpanel" class="tab-pane" id="elements">
                        <div class="col-xs-12">
                            <div class="table-responsive custom-table style-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="1%">{{'#'|trans}}</th>
                                            <th>{{'Sub Title'|trans}}</th>
                                            <th width="10%"></th>
                                            <th width="10%"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% if form.vars.value.id != null %}
                                            {% for element in form.vars.value.elements%}
                                                <tr class="{% if loop.index % 2 == 1%}odd{%else%}even{%endif%}">
                                                    <td>{{loop.index}}</td>
                                                    <td>{{element.subTitle}}</td>
                                                    <td class="wrap-link style-1">
                                                        <a class="link link-edit" href="{{path('crous_backend_assistanceelement_add', {id: element.id, pid: element.id})}}">{{'Edit'|trans}}</a>
                                                    </td>
                                                    <td class="wrap-link style-1">
                                                        <a class="link link-edit" onclick="return confirm('{{'Do you want to delete this record?'|trans}}');" href="{{path('crous_backend_assistanceelement_delete', {id: element.id})}}">{{'Delete'|trans}}</a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-xs-12">
                                <div class="wrap-btn style-3">
                                {% if form.vars.value.id != null %}
                                    <a href="{{path('crous_backend_assistanceelement_add', {pid: form.vars.value.id})}}" class="btn btn-default">{{'Add Element'|trans}}</a>
                                {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

